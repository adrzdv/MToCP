<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MToCP" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@color/background_ivory</item>
        <item name="colorControlHighlight">@color/ripple_color</item>
    </style>

    <style name="Theme.MToCP" parent="Base.Theme.MToCP" />

    <style name="ShapeAppearance.RoundedButtonCustom" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MainGreenButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/fsrail75</item>
        <item name="rippleColor">@color/ripple_dark</item>
        <item name="shapeAppearance">@style/ShapeAppearance.RoundedButtonCustom</item>
        <item name="android:layout_height">90dp</item>

        <item name="android:elevation">16dp</item>
        <item name="android:translationZ">8dp</item>

        <!-- Автоматическое изменение размера текста -->
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">12sp</item>
        <item name="android:autoSizeMaxTextSize">16sp</item>
        <item name="android:autoSizeStepGranularity">1sp</item>

        <!-- Ограничение строк и обрезка текста -->
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:drawablePadding">8dp</item>

        <item name="minHeight">56dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <style name="Header">
        <item name="android:fontFamily">@font/rrgpro_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">viewEnd</item> <!-- Выравнивание по правому краю -->
        <item name="android:textColor">@color/text_secondary</item> <!-- Цвет текста, можно поменять на любой -->
    </style>
</resources>